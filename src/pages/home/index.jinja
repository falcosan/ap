{% extends "layout.html" %}
{% block main %}
Hello, My name is Daniele.
<div class="flex flex-col mt-16">
  <div class="grid grid-flow-col gap-2 justify-center">
    <button class="size-8" onclick="sub()">-</button>
    <button class="size-8" onclick="add()">+</button>
  </div>
  This is a counter. Try to click the buttons.
  <pre class="p-16 my-8 shadow-lg text-center text-5xl rounded" id="counter">{{ page.counter }}</pre>
</div>
<script>
  const sub = () => fetch('/decrease-counter', { method: 'POST' }).then(e => e.text()).then(e => document.getElementById('counter').innerText = e);
  const add = () => fetch('/increase-counter', { method: 'POST' }).then(e => e.text()).then(e => document.getElementById('counter').innerText = e);
</script>
{% endblock %}