{% extends "layout.html" %}
{% block main %}
Hello, my name is Daniele.
<div id="data"></div>
<script>
  fetch('/get_data_home')
    .then(response => response.json())
    .then(data => {
      // Assuming the endpoint returns an object with a "story" property.
      const storyContent = data.story || data;
      document.getElementById('data').textContent = storyContent;
    })
    .catch(error => {
      console.error('Error fetching the story:', error);
      document.getElementById('data').textContent = 'Failed to load the story.';
    });
</script>
{% endblock %}