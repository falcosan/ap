{% extends "layout.html" %}

{% set content = page.data.content %}

{% block title %}{{ super() }} | {{ content.title }} {% endblock %}
{% block main %}
<pre align="right"><i>{{ content.date|date_format }}</i></pre>
<h1>{{ content.title }}</h1>
<h2>{{ content.intro }}</h2>
<article>{{ content.long_text|safe }}</article>
{% endblock %}